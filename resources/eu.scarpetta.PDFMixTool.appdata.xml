<component type="desktop-application">
  <id>eu.scarpetta.PDFMixTool</id>
  <metadata_license>FSFAP</metadata_license>
  <project_license>GPL-3.0+</project_license>

  <description>
    <p>
      PDF Mix Tool is a simple and lightweight application that allows you
      to split, merge, rotate and mix PDF files. Since version 0.3 it can
      also combine more pages of a document into one.
    </p>
  </description>

  <launchable type="desktop-id">eu.scarpetta.PDFMixTool.desktop</launchable>

  <screenshots>
