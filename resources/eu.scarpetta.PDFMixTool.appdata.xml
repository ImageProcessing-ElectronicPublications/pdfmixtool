    </screenshot>
    <screenshot>
      <caption>Multipage feature</caption>
      <image>https://scarpetta.eu/pdfmixtool/multipage.png</image>
    </screenshot>
    <screenshot>
      <caption>Rotate a PDF file</caption>
      <image>https://scarpetta.eu/pdfmixtool/rotate_file.png</image>
    </screenshot>
    <screenshot>
      <caption>Mix 3 PDF files</caption>
      <image>https://scarpetta.eu/pdfmixtool/mix_3_files.png</image>
    </screenshot>
    <screenshot>
      <caption>Extract the first 20 pages from a PDF file</caption>
      <image>https://scarpetta.eu/pdfmixtool/split_file.png</image>
    </screenshot>
  </screenshots>

  <url type="homepage">https://scarpetta.eu/pdfmixtool</url>

